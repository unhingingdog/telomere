{
  "name": "telomere",
  "version": "0.1.5",
  "description": "A WASM-powered library to cap incomplete JSON streams.",
  "author": "Hamish Gilkison <hamishgilkison@gmail.com>",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/telomere_json_wasm.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unhingingdog/telomere.git"
  },
  "scripts": {
    "dev": "npm run build:wasm:release && vite",
    "build:wasm:release": "wasm-pack build --release ./telomere-json-wasm --target web --out-dir src/pkg",
    "build": "npm run build:wasm:release && vite build && npm run postbuild",
    "postbuild": "node buildScripts/postbuild.js",
    "pretest": "npm run build:wasm:release && npm run postbuild",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-wasm": "^3.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wasm-pack": "^0.12.1"
  },
  "keywords": [
    "json",
    "stream",
    "streaming",
    "parser",
    "wasm",
    "rust",
    "llm",
    "cap",
    "incomplete"
  ]
}
